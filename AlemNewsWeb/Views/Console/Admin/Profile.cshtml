@{
  Layout = $"~/Views/Shared/_AdminLayout.cshtml";
  var adminTypeName = (ViewData["adminTypeName"] ?? string.Empty) as string;
  var avatarUrl = (ViewData["avatarUrl"] ?? string.Empty) as string;
  var admin = QarModel<Admin>("admin");
}
<div class="pc-container">
  <div class="pc-content">
    <div class="page-header">
      <div class="page-block">
        <div class="row align-items-center">
          <div class="col-md-12">
            <ul class="breadcrumb">
              <li class="breadcrumb-item"><a href="/@CurrentLanguage/admin/index">@T("ls_Home")</a></li>
              <li class="breadcrumb-item" aria-current="page">@T("ls_Profile")</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <form class="card qar-form" action="/@CurrentLanguage/Admin/ProfileInfo" method="post">
          <div class="card-header">
            <h5>@T("ls_Personalinfo")</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-sm-12 text-center mb-3">
                <div class="user-upload wid-150">
                  <img src="@avatarUrl?.Replace("_small.","_middle.")" alt="@admin?.Name" data-image="avatar"
                    class="img-fluid">
                  <a for="uplfile" class="img-avtar-upload" href="/@CurrentLanguage/Modal/UploadAvatar"
                    rel="custom-modal">
                    <i class="ti ti-camera f-24 mb-1"></i>
                    <span>@T("ls_Upload")</span>
                  </a>
                  <input type="file" id="uplfile" class="d-none">
                </div>
              </div>
              <div class="col-12">
                <div class="form-group">
                  <label class="form-label" for="name">@T("ls_Name")<span class="text-danger">*</span></label>
                  <input type="text" class="form-control" id="name" name="name" value="@admin?.Name">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label class="form-label" for="email">@T("ls_Email")<span class="text-danger">*</span></label>
                  <input type="text" class="form-control direction-ltr" id="email" name="email" value="@admin?.Email">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label class="form-label" for="phone">@T("ls_Phone")</label>
                  <input type="text" class="form-control direction-ltr" id="phone" name="phone" value="@admin?.Phone">
                </div>
              </div>
            </div>
          </div>
          <div class="card-footer text-end btn-page">
            <button type="reset" class="btn btn-outline-secondary">@T("ls_Cancel")</button>
            <button type="submit" data-loading-text="@T("ls_Loading") ..."
              class="btn btn-primary">@T("ls_Edit")</button>
          </div>
        </form>
      </div>
      <div class="col-lg-6">
        <form class="card qar-form" action="/@CurrentLanguage/Admin/ChangePassword" method="post">
          <div class="card-header">
            <h5>@T("ls_Changepassword")</h5>
          </div>
          <div class="card-body">
            <div class="form-group">
              <label class="form-label" for="oldPassword">@T("ls_Oldpassword")<span class="text-danger">*</span></label>
              <input type="password" class="form-control" id="oldPassword" name="oldPassword">
            </div>
            <div class="form-group">
              <label class="form-label" for="newPassword">@T("ls_Newpassword")<span class="text-danger">*</span></label>
              <input type="password" class="form-control" id="newPassword" name="newPassword">
            </div>
            <div class="form-group">
              <label class="form-label" for="confirmPassword">@T("ls_Retypepassword")<span
                  class="text-danger">*</span></label>
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
            </div>
          </div>
          <div class="card-footer text-end btn-page">
            <button type="reset" class="btn btn-outline-secondary">@T("ls_Cancel")</button>
            <button type="submit" data-loading-text="@T("ls_Loading") ..."
              class="btn btn-primary">@T("ls_Edit")</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>