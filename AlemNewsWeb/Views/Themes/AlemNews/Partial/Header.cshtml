                                @*         { *@
                                @*             <a href="javascaript:void(0);" data-language="@item.LanguageCulture" data-static="qar" *@
                                @*                class="dropdown-item @(item.LanguageCulture.Equals(CurrentLanguage) ? "active" : "")"> *@
                                @*                 <img src="@item.LanguageFlagImageUrl" alt="" /> &nbsp; *@
                                @*                 <span>@item.FullName</span> *@
                                @*             </a> *@
                                @*         } *@
                                @*     </div> *@
                                @* </li> *@
                                
                            </ul>
                        </nav>
                       
                        
                    </div>
                    <div class="header-action-items header-action-items1">
                        <div class="search-part">
                            <div class="search-icon action-item icon"><i class="rt-search"></i></div>
                            <div class="search-input-area">
                                <div class="container">
                                    <form class="search-input-inner uly-search" id="" method="post" action="/@CurrentLanguage/article/list">
                                        <div class="input-div">
                                            <div class="search-input-icon"><i class="rt-search mr--10"></i></div>
                                            <input id="searchInput1" class="search-input uly-input-search" type="text"
                                                placeholder="@T("ls_Searchbywebsite")">
                                        </div>
                                        <div class="search-close-icon"><i class="rt-xmark"></i></div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a class="hamburger-menu aitem">
                        <div class="hamburger-menu-inner">
                            <span></span>
                            <span class=""></span>
                            <span></span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <aside class="slide-bar">
        <div class="offset-sidebar">
            <button class="slide-bar-close ml--30"><i class="fal fa-times"></i></button>
            <div class="offset-widget offset-logo mb-30">
                <a href="/@CurrentLanguage">
                    <img src="@GetUrl(SiteSetting?.LightLogo)" alt="@SiteSetting?.Title" class="logo-uly">
                </a>
            </div>
        </div>
        <!-- side-mobile-menu start -->
        <nav class="side-mobile-menu side-mobile-menu1">
            <ul id="mobile-menu-active">
                  <li><a class="mm-link" href="/@CurrentLanguage">@T("ls_Home")</a></li>
                <li class="has-dropdown firstlvl">
                    <a class="mm-link" href="javascript:void(0)">Спорт <i class="rt-angle-down"></i></a>
                    <ul class="sub-menu">
                         @foreach (var menu in menuList.Where(x => x.QStatus == 0))
                        {
                            <li><a href="/@CurrentLanguage/category/@(menu.LatynUrl).html">@menu?.Title</a></li>
                        }
                    </ul>
                </li>
                <li><a class="mm-link" href="/@CurrentLanguage/category/paris-2024.html">Париж-2024</a></li>
                <li><a class="mm-link" href="/@CurrentLanguage/category/aboutus.html">@T("ls_About")</a></li>
                <li><a class="mm-link" href="/@CurrentLanguage/ac/contact.html">@T("ls_Contacts")</a></li>
                <li><a class="mm-link" href="/@CurrentLanguage/ac/advertise.html">@T("ls_Aboutadvertise")</a></li>
                <li class="has-dropdown firstlvl"><a class="mm-link" href="javascaript:void(0);">@T("ls_Selectlanguage")<i class="fa fa-globe fa-xl" style="    font-size: 20px;"></i></a>
                    <ul class="sub-menu">
                        @foreach (var item in LanguageList.Where(x => x.FrontendDisplay == 1).ToList())
                        {
                            <li class="">
                                                                
                                <a href="javascaript:void(0);" data-language="@item.LanguageCulture" data-static="qar">
                                    <img src="@item.LanguageFlagImageUrl" alt=""/> &nbsp;
