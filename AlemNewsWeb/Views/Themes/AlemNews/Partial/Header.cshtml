}
<header id="rtsHeader" class="rts-header1">
    <div class="navbar-sticky">
        <div class="navbar-part navbar-part1">
            <div class="container">
                <div class="navbar-inner">
                    <a href="/@CurrentLanguage" class="logo"><img
                            src="@GetUrl(SiteSetting?.LightLogo)" alt="@SiteSetting?.Title" class="logo-uly"></a>
                    <a href="/@CurrentLanguage" class="logo-sticky"><img
                            src="@GetUrl(SiteSetting?.LightLogo)" class="logo-uly" alt="@SiteSetting?.Title"></a>
                    <div class="rts-menu">
                        <nav class="menus menu-toggle">
                            <ul class="nav__menu">
                                <li><a class="menu-item" href="/@CurrentLanguage">@T("ls_Home")</a></li>
                                <li class="has-dropdown"><a class="menu-item" href="#">Спорт</a>
                                    <ul class="dropdown-ul">
                                        @foreach (var menu in menuList.Where(x => x.QStatus == 0))
                                        {
                                            <li class=""><a class="dropdown-link active"
                                                            href="/@CurrentLanguage/category/@(menu.LatynUrl).html">@menu?.Title</a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                                <li><a class="menu-item"
                                       href="/@CurrentLanguage/category/paris-2024.html">Париж-2024</a></li>
                                <li><a class="menu-item" href="/@CurrentLanguage/ac/aboutus.html">@T("ls_About")</a></li>
                                <li><a class="menu-item" href="/@CurrentLanguage/ac/contactus.html">@T("ls_Contacts")</a></li>
                                <li><a class="menu-item" href="/@CurrentLanguage/ac/advertise.html">@T("ls_Aboutadvertise")</a></li>
                                <li class="has-dropdown"><a class="menu-item" href="javascaript:void(0);"><i class="fa fa-globe fa-xl" style="    font-size: 20px;"></i></a>
                                    <ul class="dropdown-ul">
                                        @foreach (var item in LanguageList.Where(x => x.FrontendDisplay == 1).ToList())
                                        {
                                            <li class="">
                                                
                                                <a href="javascaript:void(0);" data-language="@item.LanguageCulture" data-static="qar"
                                                   class="dropdown-link @(item.LanguageCulture.Equals(CurrentLanguage) ? "active" : "")">
                                                    <img src="@item.LanguageFlagImageUrl" alt=""/> &nbsp;
                                                    <span>@item.FullName</span>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                                
