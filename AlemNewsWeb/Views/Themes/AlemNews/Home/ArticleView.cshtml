@{
    Layout = $"~/Views/Themes/{CurrentTheme}/_HomeLayout.cshtml";
  var article = QarModel<Article>("article");
  var tagList = QarList<Tag>("tagList");
  var canEditArticle = Convert.ToBoolean(ViewData["canEditArticle"] ?? false);
  var adminList = QarList<Admin>("adminList");
}

<main id="content">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="post-title mb-4">
              <!-- title -->
              <h1 class="entry-title display-4 display-2-lg mt-2">@article?.Title</h1>
              <!-- atribute -->
              <div class="post-atribute mb-3">
                <div class="my-3 text-muted small">
                  <!--author-->
                 
                    @foreach (var admin in adminList)
                    {
                        if (admin.Id == article?.AddAdminId)
                        {
                          <span class="d-none d-sm-inline">@admin?.Name </span>
                          
                        }
                    }
                 
                  <!--date-->
                  <time class="ms-0 ms-sm-2 ms-md-3" datetime="2019-10-22">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-calendar-check me-1" viewBox="0 0 16 16">
                      <path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
                      <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                    </svg>@UnixTimeHelper.UnixTimeToLocalString(article.AddTime,CurrentLanguage)
                  </time>
                  <!--comments-->
                  <span class="ms-2 ms-md-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye me-1" viewBox="0 0 16 16">
                      <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                      <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                    </svg> @article?.ViewCount
                  </span>
                </div>
              </div>
            </div>

            <!-- post content -->
            <div class="post-content">
              <!-- images -->
              <figure class="ratio_1140-535 image-wrapper">
                <img class="img-fluid lazy" src="@GetUrl(!string.IsNullOrWhiteSpace(article?.FocusAdditionalFile) ? article.FocusAdditionalFile : article?.ThumbnailUrl.Replace("_middle.", "_big.").Replace("_small.", "_big."))" data-src="@GetUrl(!string.IsNullOrWhiteSpace(article?.FocusAdditionalFile) ? article.FocusAdditionalFile : article?.ThumbnailUrl.Replace("_middle.", "_big.").Replace("_small.", "_big."))" alt="@article?.Title">
              </figure>
              <p class="text-black"> @article?.ShortDescription</p>
              <p> @Html.Raw(article?.FullDescription)</p>
            </div>

            <!-- footer post -->
            <div class="entry-footer">
              <!-- tags -->
              <div class="tags-area">
                <ul class="tags-links tagcloud ps-0">
                  <li><span class="fw-bold me-2">@T("ls_Tags")</span></li>
                   @foreach (var tag in tagList)
                   {
                     <li><a href="/@CurrentLanguage/tag/@(tag.LatynUrl).html">@tag.Title</a></li>
                   }
                 
                </ul>
              </div>
              <div class="gap-0"></div>
            </div>
            <hr>

            <!-- Dont-forget to replace https://www.bootstrap.news with post url -->
            <div class="social-share mb-3">
               @{
                  string shareTitle = article?.Title ?? "";
                  string shareUrl = $"{SiteUrl}/{CurrentLanguage}/article/{article?.LatynUrl}.html";
                 string emailBody = Uri.EscapeDataString(shareUrl);
                 string whatsappText = Uri.EscapeDataString($"{shareTitle} {shareUrl}");
               }
               
              <a class="btn btn-social btn-facebook text-white btn-sm blank-windows" href="https://facebook.com/share.php?u=@shareUrl" target="_blank" title="Share to facebook">
                <svg xmlns="http://www.w3.org/2000/svg" width="1rem" height="1rem" fill="currentColor" class="bi bi-facebook me-1" viewBox="0 0 16 16">
                  <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/>
                </svg><span class="d-none d-sm-inline">Facebook</span>
              </a>
              <a class="btn btn-social btn-twitter text-white btn-sm blank-windows" href="https://twitter.com/intent/tweet?text=@shareTitle&url=@shareUrl" target="_blank" title="Share to twitter">
                <svg xmlns="http://www.w3.org/2000/svg" width="1rem" height="1rem" fill="currentColor" class="bi bi-twitter me-1" viewBox="0 0 16 16">
                  <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"/>
                </svg><span class="d-none d-sm-inline text-white">Twitter</span>
              </a>
              <a class="btn btn-social btn-linkedin text-white btn-sm blank-windows" href="https://telegram.me/share/url?url=@shareUrl&text=@shareTitle" target="_blank" title="Share to Linkedin">
               <img src="/images/telegram.svg" style="width: 20px;padding-right:4px" alt=""><span class="d-none d-sm-inline">telegram</span>
              </a> 
              <a class="btn btn-success text-white btn-sm " href="whatsapp://send?text=@whatsappText" target="_blank" data-action="share/whatsapp/share" title="Share to whatsapp">
                <svg xmlns="http://www.w3.org/2000/svg" width="1rem" height="1rem" class="me-1" fill="currentColor" viewBox="0 0 512 512"><path d="M414.73,97.1A222.14,222.14,0,0,0,256.94,32C134,32,33.92,131.58,33.87,254A220.61,220.61,0,0,0,63.65,365L32,480l118.25-30.87a223.63,223.63,0,0,0,106.6,27h.09c122.93,0,223-99.59,223.06-222A220.18,220.18,0,0,0,414.73,97.1ZM256.94,438.66h-.08a185.75,185.75,0,0,1-94.36-25.72l-6.77-4L85.56,427.26l18.73-68.09-4.41-7A183.46,183.46,0,0,1,71.53,254c0-101.73,83.21-184.5,185.48-184.5A185,185,0,0,1,442.34,254.14C442.3,355.88,359.13,438.66,256.94,438.66ZM358.63,300.47c-5.57-2.78-33-16.2-38.08-18.05s-8.83-2.78-12.54,2.78-14.4,18-17.65,21.75-6.5,4.16-12.07,1.38-23.54-8.63-44.83-27.53c-16.57-14.71-27.75-32.87-31-38.42s-.35-8.56,2.44-11.32c2.51-2.49,5.57-6.48,8.36-9.72s3.72-5.56,5.57-9.26.93-6.94-.46-9.71-12.54-30.08-17.18-41.19c-4.53-10.82-9.12-9.35-12.54-9.52-3.25-.16-7-.2-10.69-.2a20.53,20.53,0,0,0-14.86,6.94c-5.11,5.56-19.51,19-19.51,46.28s20,53.68,22.76,57.38,39.3,59.73,95.21,83.76a323.11,323.11,0,0,0,31.78,11.68c13.35,4.22,25.5,3.63,35.1,2.2,10.71-1.59,33-13.42,37.63-26.38s4.64-24.06,3.25-26.37S364.21,303.24,358.63,300.47Z" style="fill-rule:evenodd"/></svg><span class="d-none d-sm-inline">Whatsapp</span>
              </a>
              <a class="btn btn-social btn-envelope text-white btn-sm" href="https://mail.google.com/mail/?view=cm&fs=1&body=@emailBody" target="_blank" title="Share by Email">
                <svg xmlns="http://www.w3.org/2000/svg" width="1rem" height="1rem" class="me-1" fill="currentColor" viewBox="0 0 512 512"><rect x="48" y="96" width="416" height="320" rx="40" ry="40" style="fill:none;stroke:currentColor;stroke-linecap:round;stroke-linejoin:round;stroke-width:32px"/><polyline points="112 160 256 272 400 160" style="fill:none;stroke:currentColor;stroke-linecap:round;stroke-linejoin:round;stroke-width:32px"/></svg><span class="d-none d-sm-inline">Email</span>
              </a>
            </div>
            <hr>
          </div>
          </div>
      </div>
    </main>